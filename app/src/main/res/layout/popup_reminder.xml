<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <Switch
        android:id="@+id/reminderSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Reminder" />

    <RadioGroup
        android:id="@+id/reminderRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioBeforeEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Before the event" />

        <RadioButton
            android:id="@+id/radio5Minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 minutes" />

        <RadioButton
            android:id="@+id/radio15Minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 minutes" />

        <RadioButton
            android:id="@+id/radio30Minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 minutes" />

        <RadioButton
            android:id="@+id/radio1Hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 hour" />

        <RadioButton
            android:id="@+id/radio1Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 day" />

        <RadioButton
            android:id="@+id/radio1Week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 week" />
    </RadioGroup>

</LinearLayout>
